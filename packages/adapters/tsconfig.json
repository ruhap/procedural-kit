{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "module": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules"]
}
